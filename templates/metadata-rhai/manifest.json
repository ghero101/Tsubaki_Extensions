{
  "manifest_version": 1,
  "id": "your-metadata-id",
  "name": "Your Metadata Source",
  "version": "1.0.0",
  "description": "Brief description of this metadata provider",
  "author": {
    "name": "Your Name",
    "url": "https://github.com/yourusername"
  },
  "license": "MIT",
  "repository": "https://github.com/tsubaki/tsubaki-addons",

  "addon_type": "metadata",
  "icon_path": "icon.png",

  "technology": "rhai",
  "entry_point": {
    "file": "plugin.rhai"
  },

  "capabilities": {
    "level": "http_only",
    "allowed_domains": ["api.yoursource.com"],
    "requires_cookies": false,
    "requires_javascript": false
  },

  "authentication": {
    "type": "none"
  },

  "source_info": {
    "base_url": "https://yoursource.com",
    "language": "en",
    "supported_languages": ["en"],
    "tags": ["metadata", "tracking"]
  },

  "rate_limiting": {
    "requests_per_minute": 60,
    "burst_limit": 10
  },

  "dependencies": {
    "addons": [],
    "libraries": {
      "rhai": []
    }
  },

  "update": {
    "url": "",
    "auto_update": false
  }
}
