{
  "manifest_version": 1,
  "id": "realbooru-rhai",
  "name": "RealBooru",
  "version": "1.0.4",
  "description": "Search and browse RealBooru for real-life photography content. Contains adult content - 18+ only.",
  "author": {
    "name": "Tsubaki Community",
    "url": "https://github.com/tsubaki"
  },
  "license": "MIT",
  "repository": "https://github.com/tsubaki/tsubaki-addons",
  "addon_type": "artwork",
  "icon_path": "icon.png",
  "nsfw": true,
  "category": "artwork",
  "technology": "rhai",
  "entry_point": {
    "file": "plugin.rhai"
  },
  "capabilities": {
    "level": "http_only",
    "allowed_domains": [
      "realbooru.com"
    ],
    "requires_cookies": false,
    "requires_javascript": false,
    "cloudflare_protected": false
  },
  "features": {
    "search": true,
    "browse": true,
    "get_series": true,
    "get_chapter_pages": true,
    "search_artwork": true,
    "get_covers": true
  },
  "authentication": {
    "type": "none",
    "credentials_schema": {
      "fields": []
    }
  },
  "source_info": {
    "base_url": "https://realbooru.com",
    "language": "en",
    "content_rating": "explicit",
    "tags": [
      "nsfw",
      "adult",
      "realbooru",
      "photography",
      "real",
      "18+"
    ]
  },
  "rate_limiting": {
    "requests_per_minute": 30,
    "burst_limit": 5
  },
  "settings_schema": {
    "default_limit": {
      "type": "number",
      "label": "Results Per Page",
      "description": "Number of results to fetch per page",
      "default": 40,
      "min": 10,
      "max": 100
    },
    "safe_mode": {
      "type": "boolean",
      "label": "Exclude Extreme Content",
      "description": "Filter out content tagged with extreme tags",
      "default": false
    }
  },
  "warnings": [
    "This addon provides access to adult content.",
    "You must be 18 years or older to use this addon.",
    "By installing, you confirm you are of legal age in your jurisdiction."
  ]
}
