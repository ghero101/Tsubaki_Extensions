{
  "manifest_version": 1,
  "id": "webtoon-rhai",
  "name": "Webtoon",
  "version": "1.0.3",
  "description": "Scraper for Webtoon (webtoons.com), the official platform for digital comics and webcomics.",
  "author": {
    "name": "Tsubaki Community",
    "url": "https://github.com/tsubaki"
  },
  "license": "MIT",
  "repository": "https://github.com/tsubaki/tsubaki-addons",
  "addon_type": "scraper",
  "icon_path": "icon.png",
  "nsfw": false,
  "technology": "rhai",
  "entry_point": {
    "file": "plugin.rhai"
  },
  "capabilities": {
    "level": "http_only",
    "allowed_domains": [
      "webtoons.com",
      "www.webtoons.com",
      "webtoon-phinf.pstatic.net",
      "swebtoon-phinf.pstatic.net"
    ],
    "requires_cookies": false,
    "requires_javascript": false,
    "cloudflare_protected": false
  },
  "features": {
    "search": true,
    "browse": true,
    "get_series": true,
    "get_chapters": true,
    "get_pages": true,
    "download": true,
    "get_covers": true
  },
  "authentication": {
    "type": "none"
  },
  "source_info": {
    "base_url": "https://www.webtoons.com",
    "language": "en",
    "content_rating": "safe",
    "tags": [
      "webtoon",
      "webcomic",
      "official",
      "originals"
    ]
  },
  "rate_limiting": {
    "requests_per_minute": 30,
    "burst_limit": 5
  },
  "settings_schema": {
    "language": {
      "type": "select",
      "label": "Language",
      "description": "Preferred language for content",
      "default": "en",
      "options": [
        {
          "value": "en",
          "label": "English"
        },
        {
          "value": "es",
          "label": "Spanish"
        },
        {
          "value": "fr",
          "label": "French"
        },
        {
          "value": "de",
          "label": "German"
        },
        {
          "value": "id",
          "label": "Indonesian"
        },
        {
          "value": "th",
          "label": "Thai"
        },
        {
          "value": "zh-hant",
          "label": "Chinese (Traditional)"
        }
      ]
    }
  },
  "update": {
    "url": "https://raw.githubusercontent.com/tsubaki/tsubaki-addons/main/sources/webtoon-rhai/manifest.json",
    "auto_update": false
  }
}
