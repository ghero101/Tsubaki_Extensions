{
  "manifest_version": 1,
  "id": "foolslide-rhai",
  "name": "FoolSlide",
  "version": "1.0.0",
  "description": "Framework parser for FoolSlide-based manga sites. Configure the base URL in settings to use with your preferred FoolSlide site (e.g., Helvetica Scans, Sense Scans, etc.).",
  "author": {
    "name": "Tsubaki Community",
    "url": "https://github.com/tsubaki"
  },
  "license": "MIT",
  "repository": "https://github.com/ghero101/Tsubaki_Extensions",
  "addon_type": "scraper",
  "icon_path": "icon.png",
  "nsfw": false,
  "technology": "rhai",
  "entry_point": {
    "file": "plugin.rhai"
  },
  "capabilities": {
    "level": "http_only",
    "allowed_domains": [
      "*"
    ],
    "requires_cookies": false,
    "requires_javascript": false,
    "cloudflare_protected": false
  },
  "features": {
    "search": true,
    "browse": true,
    "get_series": true,
    "get_chapters": true,
    "get_pages": true,
    "download": true,
    "get_covers": true
  },
  "authentication": {
    "type": "none"
  },
  "settings": [
    {
      "key": "base_url",
      "type": "text",
      "label": "Base URL",
      "description": "The base URL of the FoolSlide site (e.g., https://helveticascans.com/r)",
      "default": "https://helveticascans.com/r",
      "required": true
    }
  ],
  "source_info": {
    "base_url": "https://helveticascans.com/r",
    "language": "en",
    "supported_languages": ["en"],
    "content_rating": "suggestive",
    "tags": [
      "foolslide",
      "scanlation",
      "framework",
      "configurable"
    ]
  },
  "rate_limiting": {
    "requests_per_minute": 30,
    "burst_limit": 5
  },
  "update": {
    "url": "https://raw.githubusercontent.com/ghero101/Tsubaki_Extensions/master/sources/foolslide-rhai/manifest.json",
    "auto_update": true,
    "download_url": "https://raw.githubusercontent.com/ghero101/Tsubaki_Extensions/master/dist/foolslide-rhai/foolslide-rhai_latest.zip"
  }
}
