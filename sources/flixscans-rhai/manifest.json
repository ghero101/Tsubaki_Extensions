{
  "manifest_version": 1,
  "id": "flixscans-rhai",
  "name": "Flix Scans",
  "version": "1.0.0",
  "description": "Scraper for Flix Scans (flixscans.org), a manhwa/manhua scanlation site.",
  "author": {
    "name": "Tsubaki Community",
    "url": "https://github.com/tsubaki"
  },
  "license": "MIT",
  "repository": "https://github.com/ghero101/Tsubaki_Extensions",
  "addon_type": "scraper",
  "icon_path": "icon.png",
  "nsfw": false,
  "technology": "rhai",
  "entry_point": {
    "file": "plugin.rhai"
  },
  "capabilities": {
    "level": "http_only",
    "allowed_domains": [
      "flixscans.org",
      "www.flixscans.org",
      "flixscans.com",
      "www.flixscans.com"
    ],
    "requires_cookies": false,
    "requires_javascript": false,
    "cloudflare_protected": false
  },
  "features": {
    "search": true,
    "browse": true,
    "get_series": true,
    "get_chapters": true,
    "get_pages": true,
    "download": true,
    "get_covers": true
  },
  "authentication": {
    "type": "none"
  },
  "source_info": {
    "base_url": "https://flixscans.org",
    "language": "en",
    "supported_languages": ["en"],
    "content_rating": "suggestive",
    "tags": [
      "manhwa",
      "manhua",
      "scanlation"
    ]
  },
  "rate_limiting": {
    "requests_per_minute": 30,
    "burst_limit": 5
  },
  "update": {
    "url": "https://raw.githubusercontent.com/ghero101/Tsubaki_Extensions/master/sources/flixscans-rhai/manifest.json",
    "auto_update": true,
    "download_url": "https://raw.githubusercontent.com/ghero101/Tsubaki_Extensions/master/dist/flixscans-rhai/flixscans-rhai_latest.zip"
  }
}
